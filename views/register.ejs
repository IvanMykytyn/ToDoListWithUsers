<%- include("partials/header") -%>

<div class="form-section">
  <form>
    <div class="mb-3">
      <h2>Register</h2>
    </div>

    <div class="mb-3">
      <input type="email" placeholder="Email" aria-describedby="emailHelp"
      class="form-control form-control-lg" name="email">
      <div id="emailHelp" class="form-text">error</div>
    </div>

    <div class="mb-3">
      <input type="password" placeholder="Password" name="password"
      class="form-control form-control-lg">
    </div>

    <div class="mb-3 form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
      <label class="form-check-label" for="flexSwitchCheckDefault">Remember me</label>
    </div>

    <button type="submit" class="btn btn-rounded btn-dark">REGISTER</button>

    <div class="mb-3 or-section">
      <div class="hr-section">
        <hr>
      </div>
      <div class="hr-text">
        <p>OR</p>
      </div>
      <div class="hr-section">
        <hr>
      </div>
    </div>

    <div class="social-items">
      <div id="facebook" class="social-item">
        <a class="mb-2 btn btn-outline-dark btn-rounded rounded-pill" href="" role="button">
          <i class="fa fa-facebook fa-lg"></i>
        </a>
      </div>

      <div id="google" class="social-item">
        <a class="mb-2 btn btn-outline-dark btn-rounded rounded-pill" href="" role="button">
          <i class="fa fa-google fa-lg"></i>
        </a>
      </div>

      <div id="instagram" class="social-item">
        <a class="mb-2 btn btn-outline-dark rounded-pill" href="" role="button">
          <i class="fa fa-instagram fa-lg"></i>
        </a>

      </div>
    </div>

  </form>
</div>


<%- include("partials/footer") -%>
