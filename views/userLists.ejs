<%- include("partials/header") -%>


  <div class="form-section">
    <div id="heading">
      <h2>Your Lists</h2>
    </div>
    <div class="list-items">
      <% newLists.forEach(list =>{ %>
        <form action="/deletelist" method="post">
          <div class="item list-item">
            <a href=<%= "/userlists/" + _.kebabCase(list.title) %>> <%= list.title %> </a>
            <input type="checkbox" onchange="this.form.submit()" name="checkbox" value=<%= _.kebabCase(list.title) %>>
          </div>

        </form>
        <% }) %>
      </div>

    <form class="item add-to-list" action="/userlists" method="post">
      <input class="form-control form-control-lg" type="text" name="newList" placeholder="New List" autocomplete="off">
      <button type="submit" name="list" value=""><i class="fa fa-solid fa-plus"></i></button>
    </form>
  </div>

  <div class="left-bar only-log">
    <a role="button" class="btn btn-outline-secondary" href="/logout">Log out</a>
  </div>


<%- include("partials/footer") -%>
