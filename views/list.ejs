<%- include("partials/header") -%>

  <div class="form-section">

  <div id="heading">
    <h2> <%= listTitle %> </h2>
  </div>

  <div class="list-items">
    <% newListItems.forEach(listItem =>{ %>
      <form action="/deleteitem" method="post">
        <div class="item">
          <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= listItem._id %>">
          <p><%= listItem.text %></p>
        </div>
        <input type="hidden" name="list" value="<%= listTitle %>">

      </form>
      <% }) %>

      <form class="item add-to-list" action="/userlists/add-item" method="post">
        <input class="form-control form-control-lg" type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="listName" value="<%= listTitle %>"><i class="fa fa-solid fa-plus"></i></button>
      </form>
  </div>

</div>
<div class="left-bar">
  <a role="button" class="btn btn-outline-dark" href="/userlists">Go back</a>
  <a role="button" class="btn btn-outline-secondary" href="/logout">Log out</a>
</div>

<%- include("partials/footer") -%>
